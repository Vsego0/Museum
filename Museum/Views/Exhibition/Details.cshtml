@model Museum.Models.Exhibition

<h1>@Model.Title</h1>


<img src="@Model.Image" />


<br />


<a>Описание:</a>
<a>@Model.Description</a>

<br />

@{
    int cnt = 0;
}

@foreach(var item in Model.Exhibits)
{
    <p>@Model.Leadup[cnt]</p>
    <div class="card text-center">

        <img src="@item.Images" style="width: 100%">

        <div class="container">

            <h4><b>@item.Title</b></h4>

            <a asp-controller="Exhibit" asp-action="Details" asp-route-id="@item.Id">Подробнее</a>

        </div>

    </div>
    cnt++;
}