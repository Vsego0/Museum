@model IEnumerable<Museum.Models.MyFile>

<form asp-action="AddHall" asp-controller="Hall" method="post">
    <fieldset>
        <h1>Создание выставочного зала</h1>

        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Название</label>
            <div class="col-md-4">
                <input id="textinput" name="title" type="text" placeholder="Название" class="form-control input-md"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Адрес</label>
            <div class="col-md-4">
                <input id="textinput" name="hallAddress" type="text" placeholder="Адрес" class="form-control input-md" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Локация</label>
            <div class="col-md-4">
                <input id="textinput" name="hallLocation" type="text" placeholder="Локация" class="form-control input-md" />
            </div>
        </div>

        <div class="form-group">
            <label>Изображение</label>
            <details>
                <symmary>Выберите изображение</symmary>
                @foreach(var item in Model)
                {
                    <input typeof="radio" name="hallImage" id="@item.Path" value="@item.Path"/>
                    <label for="@item.Path"><img src="@item.Path" width="200px"/></label>
                }
            </details>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <button id="singlebutton" name="singlebutton" class="btn btn-primary">Создать зал</button>
            </div>
        </div>

    </fieldset>
</form>