@model IEnumerable<Museum.Models.Exhibit>

<form method="post">
    <label>Категории</label>
    <select name="category">

    </select>
</form>

<form method="post" asp-controller="Exhibit" asp-action="Category">

</form>

<div class="display">

    @foreach(Exhibit item in Model)
    {
        <div class="card text-center">

            <img src="@item.Images" style="width: 100%">
            
            <div class="container">

                <h4><b>@item.Title</b></h4>

                <a asp-controller="Exhibit" asp-action="Details" asp-route-id="@item.Id">Подробнее</a>

            </div>

        </div>
    }

</div>